<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12sp"
    app:cardCornerRadius="12sp"
    app:cardElevation="6sp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="7sp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/add_from_file"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_bg"
            android:drawableStart="@drawable/ic_add_from_file"
            android:padding="20dp"
            android:layout_marginHorizontal="5dp"
            android:gravity="center"
            android:drawableTint="@color/blueee"
            android:text="@string/add_from_file"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/add_from_url"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_add_from_link"
            android:padding="20dp"
            android:background="@drawable/btn_bg"
            android:layout_marginHorizontal="5dp"
            android:gravity="center"
            android:layout_marginTop="10sp"
            android:drawableTint="@color/blueee"
            android:text="@string/add_from_url"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/add_from_file" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/add_xtream"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:drawableStart="@drawable/ic_add_from_xtream_account"
            android:padding="20dp"
            android:layout_marginBottom="5dp"
            android:layout_marginHorizontal="5dp"
            android:background="@drawable/btn_bg"
            android:drawableTint="@color/blueee"
            android:layout_marginTop="10sp"
            android:text="@string/add_xtream_account"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/add_from_url" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>